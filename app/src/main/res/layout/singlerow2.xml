<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="16dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:background="#EA8261"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="horizontal"
            >
    <TextView
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10dp"
        android:text="Order number:"
        >
    </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showOrderTextView1"
            android:textSize="24sp"
            android:textStyle="normal"
            android:textColor="#000"
            android:padding="10dp"
            android:text="Order number:"

            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="10dp"
                android:text="Food name:"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showOrderTextView2"
                android:textSize="24sp"
                android:textStyle="normal"
                android:textColor="#000"
                android:padding="10dp"
                android:text="Order number:"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#3E3C3C"
                android:padding="10dp"
                android:text="Food price:"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showOrderTextView3"
                android:textSize="24sp"
                android:textStyle="normal"
                android:textColor="#000"
                android:padding="10dp"
                android:text="Food price:"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="10dp"
                android:text="Food quantity:"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showOrderTextView4"
                android:textSize="24sp"
                android:textStyle="normal"
                android:textColor="#000"
                android:padding="10dp"
                android:text="Order number:"

                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="20dp"
            >
            <ImageView
                android:id="@+id/showOrderImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:src="@drawable/ic_baseline_delete_forever_24"


                />

            <TextView
                android:id="@+id/showOrderTextView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Delete"
                android:textSize="18sp"
                />


        </LinearLayout>
</LinearLayout>




</androidx.cardview.widget.CardView>